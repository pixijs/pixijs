{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "baseUrl": "./",
        "paths": {
            "@pixi/*": [
                "packages/*/src",
                "packages/filters/*/src",
                "packages/canvas/*/src"
            ]
        },
    },
    "include": [
        "**/*.tests.ts",
        "**/src/**.ts"
    ]
}

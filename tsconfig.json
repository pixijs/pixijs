{
    "compilerOptions": {
        "target": "es2020",
        "allowJs": false,
        "sourceMap": true,
        "removeComments": false,
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "strictNullChecks": false,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "downlevelIteration": true,
        "baseUrl": "./",
        "types": ["node", "css-font-loading-module"],
        "paths": {
            "@pixi/*": [
                "packages/*/src"
            ],
            "pixi.js": [
                "bundles/pixi.js/src"
            ],
            "pixi.js-legacy": [
                "bundles/pixi.js-legacy/src"
            ],
            "@pixi/webworker": [
                "bundles/pixi.js-webworker/src"
            ]
        }
    },
    "exclude": [
        "bundles/**/*.d.ts",
        "node_modules",
        "**/dist/**",
        "**/lib/**",
        "**/out/**",
        "**/*.worker.ts"
    ],
    "ts-node": {
        "files": true,
        "compilerOptions": {
            "esModuleInterop": true
        }
    }
}

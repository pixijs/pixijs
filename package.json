{
  "private": true,
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap --hoist",
    "preclean": "rimraf bundles/*/lib packages/*/lib",
    "clean": "lerna clean",
    "predeploy": "npm run docs",
    "pretest": "npm run lint && npm run build:dev",
    "test": "lerna run test",
    "docs": "jsdoc -c jsdoc.conf.json -R README.md",
    "lint": "eslint bundles packages tools integrations --ignore-path .gitignore --max-warnings 0",
    "lintfix": "npm run lint -- --fix",
    "build": "lerna run build",
    "build:dev": "lerna run build:dev",
    "watch": "lerna run --parallel watch",
    "lerna": "lerna",
    "prepub": "npm run build",
    "pub": "lerna publish"
  },
  "devDependencies": {
    "@pixi/jsdoc-template": "^2.2.0",
    "eslint": "^4.6.1",
    "jsdoc": "^3.4.0",
    "lerna": "^2.4.0",
    "rimraf": "^2.6.2"
  }
}

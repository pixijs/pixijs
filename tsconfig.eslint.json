{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "baseUrl": "./",
        "paths": {
            "@pixi/*": [
                "packages/*/src",
                "packages/filters/*/src",
                "packages/canvas/*/src"
            ]
        },
    },
    "exclude": [
        "node_modules",
        "**/dist/**",
        "**/lib/**",
    ]
}
